{
    "name": "szyfr/maya-php-sdk-laravel",
    "description": "PHP SDK for Maya Checkout payment gateway integration with Saloon HTTP client and type-safe DTO",
    "type": "library",
    "keywords": [
        "maya",
        "paymaya",
        "payment",
        "checkout",
        "laravel",
        "saloon",
        "php",
        "sdk"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Ren Mendoza",
            "email": "dev@renmendoza.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "saloonphp/saloon": "^3.0",
        "illuminate/support": "^12.0"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0",
        "rector/rector": "^1.0",
        "phpstan/phpstan": "^1.10",
        "orchestra/testbench": "^10.0",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Szyfr\\Maya\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Szyfr\\Maya\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage",
        "format": "pint",
        "format-test": "pint --test",
        "analyse": "phpstan analyse",
        "refactor": "rector process",
        "refactor-dry": "rector process --dry-run"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Szyfr\\Maya\\Laravel\\MayaServiceProvider"
            ],
            "aliases": {
                "Maya": "Szyfr\\Maya\\Laravel\\Facades\\Maya"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}